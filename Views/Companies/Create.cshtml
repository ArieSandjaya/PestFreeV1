@model PestFree.Models.Company
@{
    ViewData["Title"] = "Create";
}
@section PageScripts {
    <script src="~/js/pages-account-settings-account.js"></script>
}
<div class="col-xl">
    <div class="card mb-6">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">New Company</h5>
        </div>

            <form asp-action="Create" method="post" enctype="multipart/form-data" asp-controller="Companies">
            <div class="card-body">
                <div class="d-flex align-items-start align-items-sm-center gap-6">
                    <img src="~/img/avatars/Empty.jpg" alt="user-avatar" class="d-block w-px-100 h-px-100 rounded" id="uploadedAvatar" />
                    <div class="button-wrapper">
                        <label for="upload" class="btn btn-sm btn-primary me-3 mb-4" tabindex="0">
                            <span class="d-none d-sm-block">Upload new photo</span>
                            <i class="ri-upload-2-line d-block d-sm-none"></i>
                            <input type="file" id="upload" name="PathImage" class="account-file-input" hidden accept="image/png, image/jpeg" />
                        </label>
                        <button type="button" class="btn btn-sm btn-outline-danger account-image-reset mb-4">
                            <i class="ri-refresh-line d-block d-sm-none"></i>
                            <span class="d-none d-sm-block">Reset</span>
                        </button>

                        <div>Allowed JPG, GIF or PNG. Max size of 800K</div>
                    </div>
                </div>
                </div>
            <div class="card-body pt-0">
                <div class="input-group input-group-merge mb-6">
                    <span id="span-company-name" class="input-group-text"><i class="ri-building-4-line ri-20px"></i></span>
                    <div class="form-floating form-floating-outline">
                        <input type="text" id="company-name-input" class="form-control" asp-for="Name" placeholder="Company Name" aria-label="Company Name" aria-describedby="span-company-name" />
                        <label for="company-name">Company Name</label>
                    </div>
                </div>
            </div>
            <div class="card-body pt-0">
                <div class="input-group input-group-merge mb-6">
                    <span id="span-address" class="input-group-text"><i class="ri-map-pin-line ri-20px"></i></span>
                    <div class="form-floating form-floating-outline">
                        <textarea id="address-textarea" class="form-control" asp-for="Address" placeholder="Address" aria-label="Address" aria-describedby="span-address" style="height: 60px;"></textarea>
                        <label for="address-textarea">Address</label>
                    </div>
                </div>
            </div>
            <div class="card-body pt-0">
                <div class="input-group input-group-merge mb-6">
                    <span id="span-phone" class="input-group-text"><i class="ri-phone-fill ri-20px"></i></span>
                    <div class="form-floating form-floating-outline">
                        <input type="text" id="phone-input" class="form-control phone-mask" asp-for="Phone" placeholder="Phone No" aria-label="Phone No" aria-describedby="span-phone" />
                        <label for="phone-input">Phone No</label>
                    </div>
                </div>
            </div>
            <div class="card-body pt-0">
                <div class="form-check form-switch mb-2">
                    <input class="form-check-input" type="checkbox" id="status-input" asp-for="IsActive" checked>
                    <label class="form-check-label" for="status-input">Status</label>
                </div>
            </div>

                <div class="card-body pt-0">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
            </form>
    </div>
</div>
